{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "outDir": "./public/build/",
        "sourceMap": true,
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "react": [ "node_modules/preact/compat/" ],
            "react-dom": [ "node_modules/preact/compat/" ]
        }
    },
    "include": [ "src/" ],
}
